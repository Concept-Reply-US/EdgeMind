        direction TB
        MQTTCLIENT["MQTT Client<br/>(Ingestion)"]
        ROUTER["Data Router"]
        WSSERVER["WebSocket<br/>Server"]
        AGENT["Agentic Loop<br/>(30s cycle)"]
    end

    subgraph storage["TIME-SERIES STORAGE"]
        INFLUX[("InfluxDB<br/>bucket: factory<br/>5-min window")]
